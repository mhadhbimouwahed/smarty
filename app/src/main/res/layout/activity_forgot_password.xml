<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"

    android:background="@drawable/gradient"
    android:orientation="vertical"

    android:layout_height="match_parent"
    android:padding="30dp"

    tools:context=".ForgotPasswordActivity">
    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type your email"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

    <EditText
        android:id="@+id/email_f"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/rectangular_field"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="15dp"
        android:hint="Email"
        android:elevation="5dp"
        android:inputType="textEmailAddress"
        android:paddingVertical="15dp"
        android:paddingLeft="20dp"
        android:textColor="#000000" />

        <TextView
            android:id="@+id/forgotPassword_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/gradient_textview"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="send reset information"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>