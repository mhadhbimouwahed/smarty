<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp">
    <LinearLayout

        android:id="@+id/expandItem_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/modifyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="modify"
            android:background="@drawable/gradient_textview"
            android:layout_marginStart="315dp"
            android:textSize="10sp"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/idDuProduit_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="product ID"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/nomDuProduit_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="product name"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#000000"
            />


        <TextView
            android:id="@+id/prixDuProduit_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="product prise"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:id="@+id/expandable_layout_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/descriptionDuProduit_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="description du profuit"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textColor="#000000"
                />

        </LinearLayout>





    </LinearLayout>
    <ImageView
        android:id="@+id/imageDuProduit_modify"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="30dp"/>

</androidx.cardview.widget.CardView>