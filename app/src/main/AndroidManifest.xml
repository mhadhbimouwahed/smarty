<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarty">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smarty">
        <activity
            android:name=".NavigationClient"
            android:exported="true"
            android:label="@string/title_activity_navigation_client"
            android:theme="@style/Theme.Smarty.NoActionBar" />
        <activity android:name=".ModifyPageActivity" />
        <activity android:name=".DeleteProductActivity" />
        <activity android:name=".ModifyProductActivity" />
        <activity android:name=".AddNewProductActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".NotLoggedinActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>